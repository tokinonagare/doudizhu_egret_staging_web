{
  "apiVersion": "extensions/v1beta1",
  "kind": "Ingress",
  "metadata": {
    "name": "bulletin-board-ingress"
  },
  "spec": {
    "backend": {
      "serviceName": "bulletin-board-service",
      "servicePort": 8080
    },
    "rules": [
      {
        "http": {
          "paths": [
            {
              "backend": {
                "serviceName": "bulletin-board-service",
                "servicePort": 8080
              },
              "path": "/bulletin-board"
            }
          ]
        }
      }
    ]
  }
}